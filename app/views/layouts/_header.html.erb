<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "MyCalendar", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home / ホーム",    root_path %></li>
          <li><%= link_to "Help / ヘルプ",    help_path, :method => :get, :remote => true  %></li>

          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Display / 表示 <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "自分のスケジュールのみ表示(デフォルト)", controller: 'events', action: 'index', display: 'my_events_only' %></li>
                <li><%= link_to "公開スケジュールのみ表示", controller: 'events', action: 'index', display: 'public_only' %></li>
                <li><%= link_to "両方を表示", controller: 'events', action: 'index', display: 'my_events_and_public' %></li>
              </ul>
            </li>
            <li><%= link_to "Users / ユーザー一覧", users_path, remote: true %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account / アカウント <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile / プロファイル", current_user, remote: true %></li>
                <li><%= link_to "Settings / ユーザー情報更新", edit_user_path(current_user), remote: true %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out / ログアウト", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in / ログイン", signin_path, method: :get, remote: true %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>